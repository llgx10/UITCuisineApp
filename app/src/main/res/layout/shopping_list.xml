<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myOrange"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingLeft="20dp"
                android:paddingTop="35dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                app:srcCompat="@drawable/ic_shopping_cart" />

            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingTop="35dp"
                android:paddingBottom="16dp"
                android:text="Shopping list"
                android:textColor="@color/white"
                android:textSize="15pt" />
        </LinearLayout>

        <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
            android:id="@+id/sumItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boder_myorange"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="3 item"
            android:textColor="@color/black"
            android:textSize="10pt"
            tools:layout_editor_absoluteX="-16dp" />
    </LinearLayout>

    <com.example.uitscuisine.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="Tripple berry kiwi smoothie"
                        android:textColor="#959595"
                        android:textSize="10pt"
                        tools:layout_editor_absoluteX="-16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:contentDescription="@string/app_name"
                        android:drawableEnd="@drawable/ic_baseline_more_horiz"
                        android:paddingRight="10dp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/boder_myorange"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_myorange"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineAmbientShadowColor="@color/white_smoke"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/blueberries" />

                        <LinearLayout
                            android:layout_width="230dp"
                            android:layout_height="70dp"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Frozen blueberries"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1/2 cup"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkBox1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_custome"
                            android:checked="false"
                            android:clickable="true"
                            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/boder_myorange"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_myorange"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineAmbientShadowColor="@color/white_smoke"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/raspberries" />

                        <LinearLayout
                            android:layout_width="230dp"
                            android:layout_height="70dp"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Frozen raspberries"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3/4 cup"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkBox2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_custome"
                            android:checked="false"
                            android:clickable="true"
                            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/boder_myorange"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_myorange"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineAmbientShadowColor="@color/white_smoke"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/strawberries" />

                        <LinearLayout
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Frozen strawberries"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1 cup"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkBox3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_custome"
                            android:checked="false"
                            android:clickable="true"
                            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="Checked Items"
                        android:textColor="#959595"
                        android:textSize="10pt"
                        tools:layout_editor_absoluteX="-16dp" />

                    <Button
                        android:id="@+id/btn_more_checked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:contentDescription="@string/app_name"
                        android:drawableEnd="@drawable/ic_baseline_more_horiz"
                        android:paddingRight="10dp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/boder_myorange"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_myorange"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineAmbientShadowColor="@color/white_smoke"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/kiwi" />

                        <LinearLayout
                            android:layout_width="230dp"
                            android:layout_height="70dp"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kiwi"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2 fruit"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkBox4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_custome"
                            android:checked="true"
                            android:clickable="true"
                            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/boder_myorange"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_myorange"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineAmbientShadowColor="@color/white_smoke"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/orangejuice" />

                        <LinearLayout
                            android:layout_width="230dp"
                            android:layout_height="70dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Onion"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="200 gam"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkBox5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_custome"
                            android:checked="true"
                            android:clickable="true"
                            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:background="@drawable/boder_myorange"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_myorange"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineAmbientShadowColor="@color/white_smoke"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/onion" />

                        <LinearLayout
                            android:layout_width="230dp"
                            android:layout_height="70dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Orange juice"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                            <com.example.uitscuisine.custom_textview.PoppinsMediumTextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100ml"
                                android:textColor="@color/black"
                                android:textSize="10pt" />

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkBox6"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_custome"
                            android:checked="true"
                            android:clickable="true"
                            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </com.example.uitscuisine.BounceScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>